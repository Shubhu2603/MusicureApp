<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iphone_x_xs__1_2"
    tools:context=".AboutPage">

    <Button
        android:id="@+id/questionnaire"
        android:layout_width="127dp"
        android:layout_height="63dp"
        android:layout_below="@+id/Play"
        android:layout_alignStart="@+id/Play"
        android:layout_alignEnd="@+id/Play"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/ripple_white"
        android:fontFamily="@font/calibri"
        android:text="Take the test !"
        android:textAllCaps="false"
        android:textColor="#9A2131"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-1dp"
        app:srcCompat="@drawable/line_1" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="79dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        app:srcCompat="@drawable/meditationhd" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="78dp"
        android:fontFamily="@font/calibri"
        android:gravity="center"
        android:text="MusiCure"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        app:autoSizeTextType="none" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="287dp"
        android:layout_height="43dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="65dp"
        android:fontFamily="@font/calibrili_lightitalic"
        android:gravity="center"
        android:text="A musical way to healthy life"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/Spinner_raga"
        android:layout_width="216dp"
        android:layout_height="65dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginStart="-24dp"
        android:layout_marginTop="17dp"
        android:background="?attr/selectableItemBackground"
        android:entries="@array/cure"
        android:gravity="center"
        android:spinnerMode="dialog"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:fontFamily="@font/calibri"
        android:gravity="center"
        android:text="Select a health issue"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/LOG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionnaire"
        android:layout_alignStart="@+id/Play"
        android:layout_alignEnd="@+id/Play"
        android:layout_marginStart="-51dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="-81dp"
        android:fontFamily="@font/calibri"
        android:foreground="?android:selectableItemBackground"
        android:gravity="center"
        android:text="Login and add to our collection"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionnaire"
        android:layout_alignStart="@+id/LOG"
        android:layout_alignEnd="@+id/LOG"
        android:layout_marginStart="2dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="-1dp"
        android:clickable="false"
        app:srcCompat="@drawable/longline" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/questionnaire"
        android:layout_alignStart="@+id/LOG"
        android:layout_marginStart="-31dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="53dp"
        android:layout_toStartOf="@+id/questionnaire"
        app:srcCompat="@drawable/core" />

    <Button
        android:id="@+id/Play"
        android:layout_width="127dp"
        android:layout_height="63dp"
        android:layout_below="@+id/Spinner_raga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/ripple_white"
        android:fontFamily="@font/calibri"
        android:text="Play Raga"
        android:textAllCaps="false"
        android:textColor="#9A2131"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="15dp"
        android:layout_height="13dp"
        android:layout_below="@+id/LOG"
        android:layout_alignEnd="@+id/LOG"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="179dp"
        app:srcCompat="@drawable/copyrighthd" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LOG"
        android:layout_alignStart="@+id/LOG"
        android:layout_marginStart="81dp"
        android:layout_marginTop="15dp"
        android:text="Shubhankar Hingne"
        android:textColor="@color/white"
        android:textSize="10dp" />


</RelativeLayout>